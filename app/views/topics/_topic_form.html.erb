<%= form_for(topic) do |t| %>
  
  <div class="form-group">
    <%= t.label :title  %>
    <%= t.text_field :title, class: 'form-control', placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= t.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to "Cancel", topics_path, class: 'btn btn-warning' %>
  </div>
<% end %>