<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alerts(error) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: "Content" %>
  </div>
  
 
  <div class="topic-selection form-control">
    <%= f.label :topic_id %>
    <%= f.collection_select(:topic_id, Topic.all, :id, :title, {selected: blog.topic_id, include_blank: false}, class: 'form-control') %>
    <%= link_to 'Edit Topics', topics_path %>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, 'draft' %>
    <%= f.label :status, 'Draft' %>
    <%= f.radio_button :status, 'published' %>
    <%= f.label :status, 'Published' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to 'Cancel and Back to Overview', blogs_path, class: 'btn btn-danger' %>
  </div>
<% end %>
