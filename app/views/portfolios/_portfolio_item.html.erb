
<div class="card">
  <% if portfolio_item.thumb_image %> 
     <%= image_tag portfolio_item.thumb_image %>
  <% end %>
   
  
  <p class="card-text">
    <span><%= link_to portfolio_item.title, portfolio_path(portfolio_item.id) %></span>
    <%= portfolio_item.subtitle %>
  <!--  <%= portfolio_item.body %> -->
  </p>
  
  <% if logged_in?(:site_admin) %>
    <p class="card-text">
      <%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %> / 
      <%= link_to "Delete", portfolio_path(portfolio_item.id), method: :delete, data: {confirm: 'Are you sure?'} %>
    </p>
  <% end %>
</div>
  

  

