<h1>Portfolio</h1>


<%= link_to "Create new item", new_portfolio_path %>


<% @portfolio_items.each do |item| %>
  <h3><%= item.title %></h3>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <% if item.thumb_image %> 
    <%= image_tag item.thumb_image %>
  <% end %>
  <%= link_to "Edit", edit_portfolio_path(item.id) %>
<% end %>
