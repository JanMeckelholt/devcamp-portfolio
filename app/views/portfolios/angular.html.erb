<h1>Angular Portfolio Items</h1>


<%= link_to "Create new item", new_portfolio_path if logged_in?(:site_admin) %>


<% @portfolio_angular_items.each do |item| %>
  <h3><%= link_to item.title, portfolio_path(item.id) %></h3>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <% if item.thumb_image %> 
    <%= image_tag item.thumb_image %>
  <% end %>
  <%= link_to "Edit", edit_portfolio_path(item.id) if logged_in?(:site_admin) %>
  <%= link_to "Delete", portfolio_path(item.id), method: :delete, data: {confirm: 'Are you sure?'} if logged_in?(:site_admin) %>
<% end %>
